{% block obsah %}

  <h1>Oznámkuj svého učitele :)</h1>

  <form action="{{ url_for('add') }}" method="post">
    <p>
    Vyber ročník, který navštěvuješ
    <select name="rocnik" id="rocnik">
      <option value="1">První</option>
      <option value="2">Druhý</option>
      <option value="3" selected>Třetí</option>
      <option value="4">Čtvrtý</option>
    </select>
    </p>

    <p>Uděl známku:
    <label>
      <input type="radio" name="znamka" value="1">1
    </label>
    <label>
      <input type="radio" name="znamka" value="2">2
    </label>
    <label>
      <input type="radio" name="znamka" value="3" checked >3
    </label>
    <label>
      <input type="radio" name="znamka" value="4">4
    </label>
    <label>
      <input type="radio" name="znamka" value="5">5
    </label>
    </p>
    <p> <button type="submit">Hlasovat</button> </p>
    
  </form>

  <h2>Celková průměrná známka</h2>

  <p style="font-size:200%">{{prumer|round(2)}}</p>
<p>celkový počet hlasujících: {{pocet}}</p>

  <h2>Průměrná známka dle ročníků</h2>
  {% for rocnik, prumer, pocet in prumery %}
    <p>průměr v <strong>{{ rocnik }}.</strong> ročníku:
        <strong>{{ prumer | round(2)}}</strong>;
    počet hlasujících: <strong>{{ pocet }}</strong>
    </p> 
  {% endfor %}


{% endblock obsah %}

<h2>Pokus s Escapováním</h2>

<p>{{'{{'}} pokus {{'}}'}}: {{pokus}}</p>
<p>{{'{{'}} pokus | escape {{'}}'}}: {{pokus | escape}}</p>
<p>{{'{{'}} pokus | safe {{'}}'}}: {{pokus | safe }}</p>

